(data_only_dirs cargo deps_rust)


(rule
 (targets libdeps_rust_ffi.a)
 (deps
  (source_tree %{workspace_root}/src))
 (locks /cargo)
 (action
  (run %{workspace_root}/scripts/invoke_cargo.sh deps_rust_ffi deps_rust_ffi)))

